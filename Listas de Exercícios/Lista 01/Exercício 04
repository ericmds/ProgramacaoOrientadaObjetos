package exercicios;

import java.util.Scanner;

public class Exercicio04 {
	
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		double num1, num2, num3, num4, media;
		
		System.out.println("Informe quatro valores!");
		System.out.println("Primeiro valor:");
		num1 = teclado.nextDouble();
		System.out.println("Segundo valor:");
		num2 = teclado.nextDouble();
		System.out.println("Terceiro valor:");
		num3 = teclado.nextDouble();
		System.out.println("Quarto valor:");
		num4 = teclado.nextDouble();
		
		media = (num1 + num2 + num3 + num4) / 4;
		
		System.out.println("A média dos quatro valores é: "+media);
		
		if (num1 > media) {
			System.out.println("O primeiro valor ("+num1+") está acima da média");
		} if (num2 > media) {
			System.out.println("O segundo valor ("+num2+" )está acima da média");
		} if (num3 > media) {
			System.out.println("O terceiro valor ("+num3+") está acima da média");
		} if (num4 > media) {
			System.out.println("O quarto valor ("+num4+") está acima da média");
		}
		
		
		teclado.close();
	}
}
